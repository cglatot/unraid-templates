<?xml version="1.0"?>
<Container version="2">
    <Name>PASTA</Name>
    <Repository>cglatot/pasta</Repository>
    <Registry>https://hub.docker.com/r/cglatot/pasta</Registry>
    <Network>bridge</Network>
    <Shell>sh</Shell>
    <Privileged>false</Privileged>
    <Support>https://github.com/cglatot/pasta/issues</Support>
    <Project>https://github.com/cglatot/pasta</Project>
    <Overview>PASTA | Audio and Subtitle Track Changer for Plex</Overview>
    <Category>Tools: Other:</Category>
    <WebUI>http://[IP]:[PORT:24291]/</WebUI>
    <TemplateURL/>
    <Icon>https://www.pastatool.com/images/android-chrome-512.png</Icon>
    <Description>PASTA allows you to connect to your Plex server and view more details about the audio tracks and subtitles, as well as set the tracks and subtitles or entire shows, or single episodes very quickly.</Description>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
        <Port>
            <HostPort>24291</HostPort>
            <ContainerPort>80</ContainerPort>
            <Protocol>tcp</Protocol>
        </Port>
        </Publish>
    </Networking>
    <Config Name="Host Port 1" Target="80" Default="24291" Mode="tcp" Description="Container Port: 80" Type="Port" Display="always" Required="true" Mask="false">24291</Config>
</Container>
